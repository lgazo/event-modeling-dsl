{
    "name": "event-modeling-vscode-extension",
    "description": "The Event Modeling support for VSCode",
    "version": "0.0.1",
    "displayName": "Event Modeling",
    "type": "module",
    "engines": {
        "vscode": "^1.67.0",
        "pnpm": ">=10.14.0"
    },
    "volta": {
        "node": "20.19.2",
        "pnpm": "10.14.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "event-modeling",
            "aliases": ["EventModeling", "event-modeling"],
            "extensions": [".evml"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "event-modeling",
            "scopeName": "source.event-modeling",
            "path": "syntaxes/event-modeling.tmLanguage.json"
        }]
    },
    "activationEvents": [
        "onLanguage:event-modeling"
    ],
    "main": "./out/extension/main.cjs",
    "scripts": {
        "clean": "shx rm -fr *.tsbuildinfo out syntaxes",
        "vscode:prepublish": "pnpm run build",
        "build:prepare": "shx mkdir -p ./syntaxes/ && shx cp -f ../language/syntaxes/event-modeling.tmLanguage.json ./syntaxes/event-modeling.tmLanguage.json",
        "build": "pnpm run build:prepare && tsc -b tsconfig.json && node esbuild.mjs",
        "build:clean": "pnpm run clean && pnpm run build",
        "watch": "pnpm run build:prepare && concurrently -n tsc,esbuild -c blue,yellow \"tsc -b tsconfig.json --watch\" \"node esbuild.mjs --watch\"",
        "vscode:package": "vsce package --follow-symlinks --no-dependencies -o dist/"
    },
    "dependencies": {
        "event-modeling-language": "workspace:*",
        "vscode-languageclient": "~9.0.1",
        "vscode-languageserver": "~9.0.1",
        "@vscode/vsce": "3.6.2",
        "langium": "4.1.0"
    },
    "devDependencies": {
        "@types/vscode": "~1.67.0",
        "concurrently": "~8.2.1",
        "esbuild": "~0.25.5"
    },
    "vsce": {
      "dependencies": false
    },

    "galleryBanner": {
        "color": "#1e1e1e",
        "theme": "dark"
    },
    "icon": "static/logo.png",
    "publisher": "LadislavGazo",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/lgazo/event-modeling-dsl.git"
    }
}
